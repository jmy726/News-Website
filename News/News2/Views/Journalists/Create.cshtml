@Scripts.Render("~/Scripts/myScript_datepicker.js")
@model News2.Models.Journalist

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-faded p-4 my-4">
    <h2>Create New Journalist</h2>

