<link href="~/content/jasny-bootstrap.css" rel="stylesheet" />
<script src="~/scripts/jasny-bootstrap.js"></script>
@model News2.Models.ProfileImg

@{
    ViewBag.Title = "AddImg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-faded p-4 my-4">
    <h2>Add Your Profile Image</h2>

    @using (Html.BeginForm("AddImg", "Journalists", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ProfileImg</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.img, htmlAttributes: new { @class = "control-label col-md-2" })
                @*<div class="col-md-10">
                    <input type="file" id="imageUpload" name="imageUpload" accept=".png,.jpg,.jpeg,.gif" />
                </div>*@
                <br />
                <span style="color:green">@ViewBag.Message</span>
            </div>

            <div class="fileinput fileinput-new" data-provides="fileinput">
                <div class="fileinput-new thumbnail">
                    <img data-src="holder.js/100%x100%">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                <div>
                    <span class="btn btn-outline-dark btn-file">
                        <span class="fileinput-new">Select image</span>
                        <span class="fileinput-exists">Change</span>
                        <input type="file" name="postedFile">
                    </span>
                    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                </div>
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(model => model.jourId, "jourId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("jourId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.jourId, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <button class="btn btn-outline-dark" onclick="location.href='@Url.Action("JournalistRedirect", "Home")';
                   return false;">Back to Menu Page</button>
    </div>
    <img src="~/images/@ViewBag.fileName" width="300" height="300" />
</div>