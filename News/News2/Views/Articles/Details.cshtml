<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
<script src="~/scripts/angular_comment.js"></script>

@model News2.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-faded p-4 my-4">
    <h2>Article Details</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ISSN
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ISSN)
            </dd>

            <dt>
                Headline
            </dt>

            <dd>
                @Html.DisplayFor(model => model.headline)
            </dd>

            <dt>
                Date Published
            </dt>
            <dd>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", @Html.DisplayFor(model => model.datePub)))
            </dd>
            <dt>
                Journalist
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Journalist.jourFName) &nbsp;
                @Html.DisplayFor(model => model.Journalist.jourLName)
            </dd>

            <dt>
                Topic
            </dt>

            <dd>
                @Html.DisplayFor(model => model.topic)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.comments)
            </dd>

            <dt>
                Office Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Journalist.officeName)
            </dd>

            <dt>
                Full Text
            </dt>

            <dd>
                @Html.DisplayFor(model => model.text)
            </dd>

        </dl>
    </div>
    <p />
    <td class="button">
        <a href="@Url.Action("Edit","Articles", new {id = Model.ISSN})"><button class="btn btn-outline-dark">Edit</button></a>
    </td>
    <td class="button">
        <a href="@Url.Action("Delete","Articles", new {id = Model.ISSN})"><button class="btn btn-outline-dark">Delete</button></a>
    </td>
    <td class="button">
        <a href="@Url.Action("Index","Articles")"><button class="btn btn-outline-dark">Back to list</button></a>
    </td>

    <div id='dv1'>
        <form ng-controller="FrmController">
            Post your Comment
            <form ng-controller="FrmController">
                <textarea ng-model="txtcomment" placeholder="Your Comment" style='width:550px'></textarea>
                <button ng-click='btn_add();' style='margin-top:10px;'>Post Comment</button>

                <h4>Comments</h4>
                <ul>
                    <li ng-repeat="comnt in comment"> {{ comnt }} <a style="float: right;" href="" ng-click="remItem($index)">x</a></li>
                </ul>
            </form>
    </div>
</div>